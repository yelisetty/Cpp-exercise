1.
#include <iostream>
using namespace std;
int main() {
   cout<<"Size of int is "<<sizeof(int)<<" bytes";
   cout<<"Size of float is "<<sizeof(float)<<" bytes";
   cout<<"Size of double is "<<sizeof(double)<<" bytes";
   cout<<"Size of char is "<<sizeof(char)<<" byte";
   return 0;
}

